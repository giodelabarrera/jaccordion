{
  "name": "jaccordion",
  "version": "1.0.0",
  "author": "Giorgio de la Barrera <giodelabarrera@gmail.com>",
  "license": "MIT",
  "main": "dist/jaccordion.js",
  "unpkg": "dist/jaccordion.js",
  "module": "dist/jaccordion.esm.js",
  "files": [
    "dist",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist coverage",
    "build:css": "node-sass src/assets/sass/jaccordion.scss dist/css/jaccordion.css && node-sass src/assets/sass/jaccordion.scss dist/css/jaccordion.min.css --output-style=compressed",
    "build:js": "rollup -c",
    "build": "npm run build:js && npm run build:css",
    "lint:js": "eslint {src,test}/**/*.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@babel/runtime": "^7.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-transform-async-to-generator": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "fetch-mock": "^7.3.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "node-fetch": "^2.3.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:js -- --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
